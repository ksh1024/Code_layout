<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">
    <!--match_parent : 부모인 activity의 가로,세로와 맞춤-->
    <!--orientation :방향, "vertical : 수직<->horizon -->

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn1"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/btn_marginBottom"
        android:text="@string/btn1_text"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn2"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/btn_marginBottom"
        android:text="@string/btn2_text"/>
    <Button
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn3"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/btn_marginBottom"
        android:text="@string/btn3_text"/>
    <Button
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/btn4"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/btn_marginBottom"
        android:text="@string/btn4_text"/>

</LinearLayout>